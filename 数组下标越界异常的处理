#include<iostream>
using namespace std;

template<typename T>
class 	Array
{
public:
	Array(int len=5)
	{
		a=new T[len];
		size=len;
	}
	
	~Array()
	{
		delete a;
	}
	
	T& operator [](int len)
	{
		if(len>size)
		{
			cout<<"数组下标越界"<<endl;
		}
		return a[len];
	}
	
	friend istream& operator >>(istream& in,Array<T>& a1);
	friend ostream& operator <<(ostream& in,const Array<T>& a1);
private:
	T* a;
	int size;
};

istream& operator >>(istream& in,Array<int>& a1)
{
	for(int i=0;i<a1.size;i++)
	{
		in>>a1.a[i];
	}
	return in;
}

ostream& operator <<(ostream& out,const Array<int>& a1)
{
	for(int i=0;i<a1.size;i++)
	{
		out<<a1.a[i]<<" ";
	}
	cout<<endl;
	return out;
}

int main()
{
	Array<int> a(10);
	cin>>a;
	cout<<a;
	a[9]=10;
	cout<<a[9];
}
